		<dependency>
			<groupId>org.jboss.elasticsearch</groupId>
			<artifactId>elasticsearch-river-jira</artifactId>
			<version>${jirariver.version}</version>
		</dependency>		
        <dependency>
            <groupId>fr.pilato.elasticsearch.river</groupId>
